{
  "manifest_version": 3,
  "name": "Focus Mode - Website Blocker",
  "version": "1.0",
  "description": "Block distracting websites to maintain focus",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Mode",
    "default_icon": {
      "16": "icon-inactive-16-16.png",
      "32": "icon-inactive-32-32.png",
      "48": "icon-inactive-48-48.png",
      "128": "icon-inactive-128-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icon-inactive-16-16.png",
    "32": "icon-inactive-32-32.png",
    "48": "icon-inactive-48-48.png",
    "128": "icon-inactive-128-128.png"
  }
}
